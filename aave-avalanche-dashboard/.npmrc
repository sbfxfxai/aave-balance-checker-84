# TiltVault NPM Configuration

# Registry configuration
registry=https://registry.npmjs.org/

# Authentication (if needed for private packages)
//registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Engine strictness
engine-strict=true

# Save exact versions
save-exact=true

# Audit configuration
audit-level=moderate
audit=true

# Cache configuration
cache=/tmp/npm-cache

# Log level
loglevel=warn

# Progress reporting
progress=false

# Color output
color=true

# Unicode support
unicode=true

# Package lock configuration
package-lock=true

# Fund configuration
fund=false

# Optional dependencies
optional=true

# Legacy peer deps
legacy-peer-deps=false

# Strict peer dependencies
strict-peer-deps=true

# Script shell
shell=bash

# Timeout
timeout=60000

# Max sockets
maxsockets=50

# Causal ordering
causal-ordering=true

# Git configuration
git-tag-version=true

# Sign git commits and tags
sign-git-tag=false
sign-git-commit=false

# Message template
message-version-signs=false

# Allow pre-release versions
allow-same-version=false
allow-published-version=true

# Tag version prefix
tag-version-prefix=v

# Git repository
git-repository=

# Git branch
git-branch=

# Git commit message
git-commit-message=

# Git working directory
git-working-directory=

# Access level
access=public

# Package scope
scope=

# Package private
private=false
